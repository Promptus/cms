<table width="100%">
  <thead>
    <tr>
      <th><%= t("name") %></th>
      <th><%= t("description") %></th>
      <th><%= t("keywords") %></th>
      <th width="193"></th>
    </tr>
  </thead>
  <tbody>
    <% content_categories.each do |category| %>
      <tr id="<%= dom_id category %>">
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= category.keywords %></td>
        <td class="actions">
          <ul class="button-group right radius">
            <li>
              <%= link_to t(:edit), edit_content_category_path(category), class: 'button tiny'  %>
            </li>
            <li>
              <%= link_to t(:delete), content_category_path(category), 'data-confirm': t(:really_delete), method: :delete, class: 'button tiny' %>
            </li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
