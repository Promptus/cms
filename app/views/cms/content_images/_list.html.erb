<table width="100%">
  <thead>
    <tr>
      <th width="154"><%= t "image" %></th>
      <th><%= t "caption" %></th>
      <th><%= t "tags" %></th>
      <th width="193" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% content_images.each do |image| %>
      <tr>
        <td>
          <%= image_tag image.image.url %>
        </td>
        <td><%= image.caption %></td>
        <td><%= image.tags %></td>
        <td class="actions">
          <ul class="button-group right radius">
            <li>
              <%= link_to t(:edit), edit_content_image_path(image), class: 'button tiny'  %>
            </li>
            <li>
              <%= link_to t(:delete), content_image_path(image), 'data-confirm': t(:really_delete), method: :delete, class: 'button tiny' %>
            </li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
